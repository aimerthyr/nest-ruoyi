/// 用户角色关联表
model SysUserRole {
  user_id BigInt @map("user_id") /// 用户id
  role_id BigInt @map("role_id") /// 岗位ID

  // fields 代表当前表的字段，references 代表关联表的字段
  user SysUser @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  role SysRole @relation(fields: [role_id], references: [role_id], onDelete: Cascade)

  @@id([user_id, role_id])
  @@map("sys_user_role")
}
