/// 用户角色关联表
model SysUserRole {
  userId Int @map("user_id") /// 用户id
  roleId Int @map("role_id") /// 岗位ID

  // fields 代表当前表的字段，references 代表关联表的字段
  user SysUser @relation(fields: [userId], references: [userId], onDelete: Cascade)
  role SysRole @relation(fields: [roleId], references: [roleId], onDelete: Cascade)

  @@id([userId, roleId])
  @@map("sys_user_role")
}
