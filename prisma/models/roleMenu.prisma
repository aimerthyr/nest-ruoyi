/// 角色菜单关联表
model SysRoleMenu {
  roleId Int @map("role_id") /// 角色ID
  menuId Int @map("menu_id") /// 菜单ID

  // fields 代表当前表的字段，references 代表关联表的字段
  role SysRole @relation(fields: [roleId], references: [roleId], onDelete: Cascade)
  menu SysMenu @relation(fields: [menuId], references: [menuId], onDelete: Cascade)

  @@id([roleId, menuId])
  @@map("sys_role_menu")
}
