/// 岗位信息表
model SysPost {
  postId     BigInt    @id @default(autoincrement()) @map("post_id") /// 岗位ID，主键自增
  postCode   String    @map("post_code") @db.VarChar(64) /// 岗位编码
  postName   String    @map("post_name") @db.VarChar(50) /// 岗位名称
  postSort   Int       @map("post_sort") @db.Int /// 显示顺序
  status     String    @map("status") @db.Char(1) /// 状态（0正常 1停用）
  createBy   String?   @default("") @map("create_by") @db.VarChar(64) /// 创建者，默认空字符串
  createTime DateTime? @default(now()) @map("create_time") @db.DateTime(0) /// 创建时间，允许为空
  updateBy   String?   @default("") @map("update_by") @db.VarChar(64) /// 更新者，默认空字符串
  updateTime DateTime? @updatedAt @map("update_time") @db.DateTime(0) /// 更新时间，允许为空
  remark     String?   @map("remark") @db.VarChar(500) /// 备注，可为空

  // 创建与用户岗位关联表的关联关系（虚拟字段，并不是数据库中真实列）
  users SysUserPost[]

  @@map("sys_post")
}
