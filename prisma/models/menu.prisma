/// 菜单权限表
model SysMenu {
  menuId     BigInt    @id @default(autoincrement()) @map("menu_id")
  menuName   String    @map("menu_name") @db.VarChar(50) /// 菜单名称
  parentId   BigInt    @default(0) @map("parent_id") /// 父菜单ID
  orderNum   Int       @default(0) @map("order_num") /// 显示顺序
  path       String    @default("") @map("path") @db.VarChar(200) /// 路由地址
  component  String?   @map("component") @db.VarChar(255) /// 组件路径，可空
  query      String?   @map("query") @db.VarChar(255) /// 路由参数，可空
  routeName  String    @default("") @map("route_name") @db.VarChar(50) /// 路由名称
  isFrame    Int       @default(1) @map("is_frame") /// 是否外链（0是 1否）
  isCache    Int       @default(0) @map("is_cache") /// 是否缓存（0缓存 1不缓存）
  menuType   String    @default("") @map("menu_type") @db.Char(1) /// 菜单类型（M目录 C菜单 F按钮）
  visible    String    @default("0") @map("visible") @db.Char(1) /// 菜单状态（0显示 1隐藏）
  status     String    @default("0") @map("status") @db.Char(1) /// 菜单状态（0正常 1停用）
  perms      String?   @map("perms") @db.VarChar(100) /// 权限标识，可空
  icon       String    @default("#") @map("icon") @db.VarChar(100) /// 菜单图标
  createBy   String    @default("") @map("create_by") @db.VarChar(64) /// 创建者
  createTime DateTime? @default(now()) @map("create_time") @db.DateTime(0) /// 创建时间，可空
  updateBy   String    @default("") @map("update_by") @db.VarChar(64) /// 更新者
  updateTime DateTime? @updatedAt @map("update_time") @db.DateTime(0) /// 更新时间，可空
  remark     String    @default("") @map("remark") @db.VarChar(500) /// 备注

  // 创建与角色菜单关联表的关联关系（虚拟字段，并不是数据库中真实列）
  roles SysRoleMenu[]

  @@map("sys_menu")
}
